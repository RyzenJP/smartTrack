{
    "name": "smarttrack/vehicle-tracking-system",
    "description": "SmartTrack Vehicle Tracking and Fleet Management System",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "SmartTrack\\": "src/"
        },
        "files": [
            "config/security.php",
            "includes/cache_helper.php",
            "includes/performance_helper.php",
            "includes/async_helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite 'Unit Tests'",
        "test:integration": "phpunit --testsuite 'Integration Tests'",
        "test:feature": "phpunit --testsuite 'Feature Tests'",
        "test:coverage": "phpunit --coverage-html tests/coverage",
        "phpcs": "phpcs --standard=PSR12 config includes",
        "phpcbf": "phpcbf --standard=PSR12 config includes",
        "audit": "composer audit",
        "security:audit": "composer audit"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
